<h1><%= @trip.name %></h1>
<ul>
  <li>Total Distance: <%= @trip.total_distance %></li>
  <li>Average Trail Length: <%= @trip.average_length%></li>
  <% if @longest_trail %>
    <li id="longest-trail">
      Longest Trail on Trip: <%= link_to @longest_trail.name, trail_path(@longest_trail) %> |
      <%= @longest_trail.length %> miles
    </li>
  <% end %>
  <% if @shortest_trail %>
    <li id="shortest-trail">
      Shortest Trail on Trip: <%= link_to @shortest_trail.name, trail_path(@shortest_trail) %> |
      <%= @shortest_trail.length %> miles
    </li>
  <% end %>
</ul>
<h2>Trails:</h2>

<ul>
  <% @trails.each do |trail| %>

    <li id="trail-<%= trail.id %>">
      <h3><%= link_to trail.name, trail_path(trail) %></h3>
      <ul>
        <li>Start point: <%= trail.address %></li>
        <li><%= trail.length %> miles</li>
      </ul>
    </li>

  <% end %>
</ul>
